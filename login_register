create table vt_usr_reg
(
usr_id  text primary key,
usr_email text ,
usr_ph text,
dsp_nm text,
pwd text,
reg_dt timestamp
);

create table vt_usr_reg_otp
(
usr_id  text primary key ,
usr_email text ,
usr_ph text,
otp  text ,
otp_exp_tm int,
pwd text,
otp_snt_dt timestamp
);

create table vt_usr_email_ph
(
ver_email_ph text primary key,
user_id  text
);

create table vt_usr_lgn
(
usr_id      text primary key,
dsp_nm text,
pwd  text,
is_act text,
crt_dt timestamp
);


create table ew_usr_shrt_dtls
(
usr_id      text primary key,
dsp_nm  text,
usr_email   text,
usr_pic text
);

create table ew_usr_dtls
(
usr_id  text ,
usr_abt_me text,
fst_nm  MAP<text,text>,
lst_nm  MAP<text,text>,
dsp_nm  MAP<text,text>,
email   MAP<text,text>,
email_nv MAP<text,text>,
dob_dt  MAP<text,text>,
dob_mn  MAP<text,text>,
dob_yr  MAP<text,text>,
cty     MAP<text,text>,
ctry    MAP<text,text>,
ph      MAP<text,text>,
ph_nv      MAP<text,text>,primary key(usr_id)
);





