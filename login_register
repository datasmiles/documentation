create table vt_usr_reg
(
usr_id  text primary key,
usr_email text ,
usr_ph text,
dsp_nm text,
pwd text,
role text,
reg_dt timestamp
);

create table vt_usr_reg_otp
(
usr_id  text primary key ,
usr_email text ,
usr_ph text,
otp  text ,
otp_exp_tm int,
pwd text,
otp_snt_dt timestamp
);

create table vt_usr_email_ph
(
ver_email_ph text primary key,
user_id  text
);

create table vt_usr_lgn
(
usr_id      text primary key,
dsp_nm text,
pwd  text,
is_act text,
crt_dt timestamp
);


create table ew_usr_shrt_dtls
(
usr_id      text primary key,
dsp_nm  text,
usr_email   text,
usr_pic text
);


create table ew_usr_dtls
(
usr_id  text ,
usr_abt_me text,
usr_abt_me_flg  text,
fst_nm  text,
fst_nm_flg  text,
lst_nm  text,
lst_nm_flg  text,
dsp_nm  text,
dsp_nm_flg  text,
dob_dt  text,
dob_dt_flg  text,
dob_mn text,
dob_mn_flg text,
dob_yr text,
dob_yr_flg text,
cty     text,
cty_flg     text,
ctry    text,
ctry_flg    text,
zip_cd  text,
zip_cd_flg  text,
ht_cty     text,
ht_cty_flg     text,
ht_ctry    text,
ht_ctry_flg    text,
ht_zip_cd  text,
ht_zip_cd_flg  text,
email   MAP<text,text>,
email_nv MAP<text,text>,
ph      MAP<text,text>,
ph_nv      MAP<text,text>,
role text,
primary key(usr_id)
);

create table ew_usr_contact_dtls
(
usr_id  text primary key,
usr_email MAP<text,text> ,
usr_ph MAP<text,text>,
reg_dt timestamp
);

create table ew_usr_work_dtls
(
usr_id  text ,
usr_wrk_sk   uuid, 
comp_nm text,
role text,
loc text,
frm_dt text,
to_dt text,
comp_desc text,
work_flg text,
primary key(usr_id,usr_wrk_sk)
);


create table ew_usr_edu_dtls
(
usr_id  text ,
usr_wrk_sk   uuid, 
edu_nm text,
loc text,
edu_lvl  text,
frm_dt text,
to_dt text,
edu_desc text,
edu_flg text,
primary key(usr_id,usr_wrk_sk)
);

create table ew_usr_exm_dtls
(
usr_id text,
usr_exm_sk   uuid, 
exm_nm text,
tgt_yr text,
exm_flg  text,
crt_dt  timestamp,
primary key(usr_id,usr_exm_sk)
);

create table ew_usr_crs_dtls
(
usr_id text,
usr_crs_sk   uuid, 
crs_nm text,
crs_flg text,
crt_dt  timestamp,
primary key(usr_id,usr_crs_sk)
);

create table ew_usr_author_dtl
(
usr_id text,
author_desc text,
usr_bk_sk   uuid, 
crs_bk_nm text,
crs_bk_desc text,
primary key(usr_id,usr_bk_sk)
);

create table ew_usr_parent_kid
(
usr_id text,
kid_usr_id text,
kid_edu_nm text,
kid_exm_nm set<text>,
primary key(usr_id,kid_usr_id)
)

create table ew_usr_tch_dtl
(
usr_id text,
tch_crs_sk uuid,
tch_desc text,
edu_nm  text,
tch_crs  text,
primary key(usr_id,tch_crs_sk)
);

create table ew_emp_typs(
typ_id uuid,
typ_desc text,
primary key(typ_id)
);

create table ew_emp_dtls
(
emp_id bigint,
typ_id uuid,
fst_nm text,
lst_nm text,
mdl_nm text,
ph_no set<text>,
adress text,
experties set<text>,
primary key(emp_id)
);

create table ew_bat_crs_m
(
crs_id text primary key,
no_of_days int
);


create table ew_bat_m
(
bat_id  bigint, 
crs_id text,
cls_start_dt timestamp,
crt_dt timestamp,
primary key((crs_id),bat_id)
) WITH CLUSTERING ORDER BY(bat_id desc);


create table ew_bat_dtls
(
bat_id  bigint, 
faculty_id set<bigint>, 
crs_id text,
cls_start_dt  timestamp,
cls_frm_tm  text,
cls_to_tm  text,
bat_crs_price MAP<text,decimal>,
discount  decimal,
msg text ,
last_class_video text,
primary key(bat_id)
);

create table ew_bat_sess_dtls
(
bat_id  bigint,  
sess_id  bigint, 
sess_dt timestamp,
sess_items MAP<text,text>,
primary key(bat_id,sess_id)
);

create table ew_payment_dtl
(
usr_id   text,
training_id text,
bat_id text,
buy_dt timestamp,
pay_id timestamp,
pay_method  text,
pay_status text,
primary key(usr_id   ,training_id,bat_id)
);

create table ew_crs_access
(
usr_id text,
training_id text,
bndl_id text,
crs_id  text,
privilege text,
start_dt timestamp,
end_dt timestamp,
primary key(usr_id,crs_id)
);







