
create table vt_forum_qrys
(
qry_id uuid,
usr_id text ,
qry_title text,
qry_txt text,
qry_ts timestamp,
qry_tags SET<text>,
PRIMARY KEY (qry_id)
);

create table vt_usr_comnt_lvl0(
pst_id 		uuid,
usr_id 		text,
cmnt_id 	uuid,
cmnt_txt text,
cmnt_img  SET<text>,
cmnt_atch  SET<text>,
cmnt_vid  SET<text>,
cmnt_lvl  text,
cmnt_cmnt_id uuid,
cmnt_ts timestamp,
PRIMARY KEY((pst_id),cmnt_ts ,cmnt_id)
);

create table vt_qry_trend
(
qry_id uuid ,
vw_cnt  counter,
primary key ((qry_id) , vw_cnt)
)  WITH CLUSTERING ORDER BY (vw_cnt desc);



create table vt_qry_vws
(
qry_id uuid ,
usr_id text ,
vw_ts timestamp,
primary key (qry_id,usr_id,vw_ts)
);







